FROM anibali/pytorch:1.7.0-cuda11.0-ubuntu20.04

ENV DEBIAN_FRONTEND=noninteractive 

WORKDIR /tmp/smp/
COPY ./requirements.txt /tmp/smp/
RUN pip install -r requirements.txt
RUN pip install pytest mock matplotlib  opencv-python
RUN pip install -U albumentations[imgaug]
USER root
RUN apt-get update && apt-get install ffmpeg libsm6 libxext6 -y

COPY . /tmp/smp/
RUN pip install .


RUN apt-get update && \
    apt-get install -y vim \
    git \
    wget \
    lsb-release \
    lsb-core \
    curl
RUN apt-get install -y software-properties-common
#RUN add-apt-repository "deb http://archive.ubuntu.com/ubuntu $(lsb_release -sc) main universe restricted multiverse"

RUN sh -c 'echo "deb http://packages.ros.org/ros/ubuntu `lsb_release -sc` main" > /etc/apt/sources.list.d/ros-latest.list'
RUN curl -s https://raw.githubusercontent.com/ros/rosdistro/master/ros.asc | sudo apt-key add -
RUN apt-get update && apt-get install -y ros-noetic-perception
#RUN rosdep init && rosdep update 
    
# Setup ROS
#RUN rosdep fix-permissions && rosdep update
RUN mkdir -p /catkin_ws/src 
RUN cd /catkin_ws 
RUN /bin/bash -c 'echo "source /opt/ros/noetic/setup.bash" >> ~/.bashrc' && \
    /bin/bash -c "source ~/.bashrc" \
    /bin/bash -c "catkin_make -DPYTHON_EXECUTABLE=/usr/bin/python3" 

RUN /bin/bash -c 'echo "source /catkin_ws/devel/setup.bash" >> ~/.bashrc'
